# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.sh]
indent_style = tab
indent_size = 4

[*.{html,css,templ}]
indent_size = 2
